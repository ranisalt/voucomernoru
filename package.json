{
  "name": "voucomernoru",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "npm run build:app && npm run build:css && npm run build:js",
    "build:app": "mkdir -p dist && babel *.js -d dist && cp favicon.ico index.html dist",
    "build:css": "mkdir -p dist/static && postcss -u autoprefixer -u postcss-import -c postcss.config.json static/index.css -o dist/static/voucomernoru.css",
    "build:js": "mkdir -p dist/static && rollup -c | babel -s inline -o dist/static/voucomernoru.js",
    "clean": "rm -r dist",
    "heroku-postinstall": "npm run update",
    "start": "[ -f 'dist/server.js' ] || npm run build && node dist/server.js",
    "test": "xo && babel-tap *.spec.js",
    "update": "npm run build:app && node dist/update.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ranisalt/voucomernoru.git"
  },
  "author": "Ranieri Althoff <ranisalt@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ranisalt/voucomernoru/issues"
  },
  "homepage": "https://github.com/ranisalt/voucomernoru#readme",
  "dependencies": {
    "babel-runtime": "^6.6.1",
    "bluebird": "^3.3.5",
    "cheerio": "^0.20.0",
    "cloudinary": "^1.3.1",
    "debug": "^2.2.0",
    "koa": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-logger": "^2.0.0",
    "koa-multer": "^1.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.0.1",
    "mustache": "^2.2.1",
    "redis": "^2.6.0-2",
    "request": "^2.72.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-tap": "^5.0.0",
    "bower": "^1.7.9",
    "postcss-cli": "^2.5.2",
    "postcss-import": "^8.1.2",
    "request-promise": "^3.0.0",
    "rollup": "^0.26.3",
    "rollup-plugin-node-resolve": "^1.5.0",
    "xo": "^0.15.0"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "no-unused-expressions": 1
    },
    "semicolon": false,
    "space": true
  }
}
